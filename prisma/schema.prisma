generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Member {
  id        String @id @default(cuid())
  name      String
  role      String
  location  String
  imageUrl  String
  category  String // Producer, Trader, Consumer
  createdAt DateTime @default(now())
}

model Advert {
  id             String @id @default(cuid())
  title          String
  description    String
  type           String // e.g. SPONSORED, LOGISTICS
  link           String
  memberDiscount String?
  createdAt      DateTime @default(now())
}
